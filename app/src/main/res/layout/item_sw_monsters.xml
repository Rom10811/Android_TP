<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_margin="5dp"
    android:background="@drawable/custom_background_item"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/itemSwMonstersIcon"
        android:layout_height="64dp"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/itemSwMonstersName"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:maxLines="3"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/itemSwMonstersType"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/itemSwMonstersIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/itemSwMonstersType"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_width="wrap_content"
        android:maxLines="3"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/full_names" />

</androidx.constraintlayout.widget.ConstraintLayout>
